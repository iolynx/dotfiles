#################
### AUTOSTART ###
#################

# Autostart necessary processes (like notifications daemons, status bars, etc.)
# Or execute your favorite apps at launch like this:

exec-once = waybar 
exec-once = nm-applet 
#  exec-once = $launcher & disown 
exec-once = ~/Personal/bazooka/target/debug/bazooka --service
exec-once = hyprpaper
exec-once = copyq --start-server
exec-once = rog-control-center & disown
exec-once = swaync
exec-once = "avizo-service"
exec-once = hyprswitch init --show-title --size-factor 5.4 & 
exec-once = nvibrant 512 512 800
exec-once = ~/.config/hypr/scripts/battery-alert.sh

# this is if we're using walker
# exec-once = $launcher --gapplication-service & disown


exec-once = gsettings set org.gnome.desktop.interface cursor-theme BreezeX-RosePine-Linux
exec-once = gsettings set org.gnome.desktop.interface cursor-size 34
exec-once = dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP

# Opening apps 
exec-once = [workspace 1 silent] $browser
exec-once = [workspace 2 silent] $terminal
exec-once = [workspace 8 silent] spotify-launcher
exec-once = [workspace 4 silent] /usr/bin/ferdium %U
# exec-once = [workspace 4 silent] ~/.local/bin/WALC.AppImage
