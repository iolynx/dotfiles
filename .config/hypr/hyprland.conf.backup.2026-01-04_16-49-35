###################
### KEYBINDINGS ###
###################

# See https://wiki.hyprland.org/Configuring/Keywords/
$mainMod = ALT # Sets "Windows" key as main modifier
$sideMod = SUPER

# Example binds, see https://wiki.hyprland.org/Configuring/Binds/ for more
bind = $mainMod, RETURN, exec, $terminal
bind = $mainMod, F, exec, $browser
bind = $mainMod, Q, killactive,
bind = $sideMod, M, exit,
bind = $mainMod, E, exec, $fileManager
bind = $mainMod, V, togglefloating,
# bind = $mainMod, Space, exec, $launcher toggle
# bind = $mainMod, Space, exec, $launcher
bind = $mainMod, Space, exec, ~/Personal/bazooka/target/debug/bazooka 
bind = $sideMod, P, exec, hyprlock
# bind = $mainMod, J, togglesplit, # dwindle
bind = SUPER_SHIFT, W, exec, killall waybar && waybar && disown
bind = SUPER_SHIFT, C, exec, hyprpicker -a
bind = $sideMod, C, exec, hyprpicker -a --format=rgb
bind = SUPER_SHIFT, V, exec, nvibrant 512 512 800
bind = $sideMod, F, fullscreen

# must add a keybind to spawn htop or mission centre when control shift escape

# Rofi binds
# bind = $mainMod, SPACE, exec, $menu
bind = $sideMod, PERIOD, exec, $emoji
# bind = $mainMod, C, exec, $calc
bind = $sideMod, Q, exec, $powermenu
bind = $SUPER_SHIFT, O, exec, hyprshade off


# theres a keybind built in for this
bind = $sideMod, V, exec, $clipboard show

# Screenshots Using Flameshot
windowrule = noanim, class:^(flameshot)$
windowrule = float, class:^(flameshot)$
windowrule = move 0 0, class:^(flameshot)$
windowrule = pin, class:^(flameshot)$
windowrule = noinitialfocus, class:^(flameshot)$
# set this to your leftmost monitor id, otherwise you have to move your cursor to the leftmost monitor
# before executing flameshot
windowrule = monitor 1, class:^(flameshot)$
bind = SUPER_SHIFT, S, exec, XDG_CURRENT_DESKTOP=sway flameshot gui


# Move focus with mainMod + arrow keys
bind = $sideMod, left, movefocus, l
bind = $sideMod, right, movefocus, r
bind = $sideMod, up, movefocus, u
bind = $sideMod, down, movefocus, d

# Move focus with mainMod + vimkeys
bind = $sideMod, h, movefocus, l
bind = $sideMod, l, movefocus, r
bind = $sideMod, k, movefocus, u
bind = $sideMod, j, movefocus, d

# Switch workspaces with mainMod + [0-9]
bind = $mainMod, 1, workspace, 1
bind = $mainMod, 2, workspace, 2
bind = $mainMod, 3, workspace, 3
bind = $mainMod, 4, workspace, 4
bind = $mainMod, 5, workspace, 5
bind = $mainMod, 6, workspace, 6
bind = $mainMod, 7, workspace, 7
bind = $mainMod, 8, workspace, 8
bind = $mainMod, 9, workspace, 9
bind = $mainMod, 0, workspace, 10
bind = $mainMod, MINUS, workspace, 11

# Move active window to a workspace with mainMod + SHIFT + [0-9]
bind = $mainMod SHIFT, 1, movetoworkspace, 1
bind = $mainMod SHIFT, 2, movetoworkspace, 2
bind = $mainMod SHIFT, 3, movetoworkspace, 3
bind = $mainMod SHIFT, 4, movetoworkspace, 4
bind = $mainMod SHIFT, 5, movetoworkspace, 5
bind = $mainMod SHIFT, 6, movetoworkspace, 6
bind = $mainMod SHIFT, 7, movetoworkspace, 7
bind = $mainMod SHIFT, 8, movetoworkspace, 8
bind = $mainMod SHIFT, 9, movetoworkspace, 9
bind = $mainMod SHIFT, 0, movetoworkspace, 10
bind = $mainMod SHIFT, MINUS, movetoworkspace, 11

#Move active window to workspace silently
bind = $sideMod SHIFT, 1, movetoworkspacesilent, 1
bind = $sideMod SHIFT, 2, movetoworkspacesilent, 2
bind = $sideMod SHIFT, 3, movetoworkspacesilent, 3
bind = $sideMod SHIFT, 4, movetoworkspacesilent, 4
bind = $sideMod SHIFT, 5, movetoworkspacesilent, 5
bind = $sideMod SHIFT, 6, movetoworkspacesilent, 6
bind = $sideMod SHIFT, 7, movetoworkspacesilent, 7
bind = $sideMod SHIFT, 8, movetoworkspacesilent, 8
bind = $sideMod SHIFT, 9, movetoworkspacesilent, 9
bind = $sideMod SHIFT, 0, movetoworkspacesilent, 10
bind = $sideMod SHIFT, MINUS, movetoworkspacesilent, 11

# Example special workspace (scratchpad)
# bind = $mainMod, S, togglespecialworkspace, magic
# bind = $mainMod SHIFT, S, movetoworkspace, special:magic

# Scroll through existing workspaces with mainMod + scroll
bind = $mainMod, mouse_down, workspace, e+1
bind = $mainMod, mouse_up, workspace, e-1

# Move/resize windows with mainMod + LMB/RMB and dragging
bindm = $mainMod, mouse:272, movewindow
bindm = $mainMod, mouse:273, resizewindow

# Laptop multimedia keys for volume and LCD brightness
# & notify-send -r 91190 "$(printf '%s' $(wpctl get-volume @DEFAULT_AUDIO_SINK@))"
# & notify-send -r 91190 "Brightness: $(printf '%d' $(brightnessctl g))%"
# & notify-send -r 91190 "Brightness: $(printf '%d' $(brightnessctl g))%"
bindel = ,XF86AudioRaiseVolume, exec, volumectl +
bindel = ,XF86AudioLowerVolume, exec, volumectl -
bindel = ,XF86AudioMute, exec, wpctl volumectl %
bindel = ,XF86AudioMicMute, exec, wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
bindel = ,XF86MonBrightnessUp, exec, lightctl up
bindel = ,XF86MonBrightnessDown, exec, lightctl down 


# Requires playerctl
bindl = , XF86AudioNext, exec, playerctl next
bindl = , XF86AudioPause, exec, playerctl play-pause
bindl = , XF86AudioPlay, exec, playerctl play-pause
bindl = , XF86AudioPrev, exec, playerctl previous


# For hyprswitch ( alt tabbing in hyprland skull )
$key = tab
$mod = alt

bind = $mod , $key, exec, hyprswitch gui --mod-key $mod --key $key --max-switch-offset 9 


##############################
###### G E S T U R E S #######
##############################

gesture = 4, horizontal, scale: 1.4, workspace

# windows style volume up and down 
gesture = 4, up, dispatcher, exec, volumectl +
gesture = 4, down, dispatcher, exec, volumectl -

gesture = 3, up, scale: 2.5, dispatcher, exec, hyprswitch gui --mod-key $mod --key $key --max-switch-offset 9


